{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./src",
    "paths": {
      "@sharedComponents/*": ["shared/components/*"],
      "@assets/*": ["../public/assets/*"],
      "@routes/*": ["pages/*"],
      "@iconos/*": ["shared/iconos/*"],
      "@layouts/*": ["shared/layouts/*"],
      "@features/*": ["features/*"]
    }
  }
}