---
import Layout from "@shared/layouts/Layout.astro";
import SidebarLayout from "@shared/layouts/SidebarLayout.astro";
import { SideBar } from "@shared/components/";
import UserTable from "@features/usuarios/components/vistaU"
import styles from "@shared/components/buttons/button/Button.module.css";
import { Button } from "@shared/components/";


---

    <SidebarLayout>
        <div class="container">
            <div class="container mt-3 ">
                <article class="row align-items-center">
                    <div class="col">
                        <h1 class="Gestion ">Gestion de usuarios</h1>
                    </div>
                    <a href="../usuarios" class="col-auto"><Button type={"submit"} variant={"buttonAccept"} parentMethod={''}>Registrar usuario </Button></a>
                </article>
                
            </div>
            
            <UserTable client:only/>
        </div> 
    </SidebarLayout>

<style>
    .Gestion {
        color: white;
        width: fit-content;
        height: fit-content;
        font-size: 25px;
        background-color: #81BFFF;
        border-radius: 20px;
        padding: 10px;
    }
    a{
        text-decoration: none;
    }
</style>