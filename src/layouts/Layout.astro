---
import Logo from "../../public/assets/logo/logo-light.svg"
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="shortcut icon" href={Logo.src} type="image/x-icon">

		<!-- Importacion de la fuente -->
		<link
			href="https://api.fontshare.com/v2/css?f[]=satoshi@1&display=swap"
			rel="stylesheet"
		/>
		<!-- Importacion de la libreria de bootstrap -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<slot />

		<!-- Importacion de la libreria de bootstrap -->
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"></script>
	</body>
</html>

<style is:global>
	/* --------------------------------- */
	/* Variables globales de estilos */
	/* --------------------------------- */
	:root {
		/* Colores del proyecto*/
		--color-secundario: #525c66;
		--color-primario-orcuro: #003366;
		--color-primario: #1f5c99;
		--color-primario-claro: #c2e0ff;
		--color-terciario: #ebffff;

		/* Fuentes del proyecto */
		--main-font: "Satoshi", sans-serif;
	}

	/* --------------------------------- */
	/* Seteo del HTML */
	/* --------------------------------- */
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
		font-family: var(--main-font);
		font-size: 15px;
	}

	/* --------------------------------- */
	/* Definicion clases reutilizables */
	/* --------------------------------- */

	.boton-primario {
		padding: 7px 14px;
		border-radius: 10px;
		border: 1px solid var(--color-primario);
		background: transparent;
		color: var(--color-primario);
		font-weight: 700;
		transition: 0.25s;
		width: fit-content;
	}

	.boton-primario:hover {
		border: 1px solid transparent;
		background: var(--color-primario);
		color: white;
	}

	.button {
		background-color: #f00;
		font-size: 30px;
		color: #fff;
		padding: 10px 20px;
		border: none;
		border-radius: 5px;
		cursor: pointer;
	}
	nav {
		border: 1px solid #00000020;
		color: #000;
		border-radius: 10px;
		padding: 0 20px;
		height: 100%;
		width: 324px;
		font-size: 17px;
	}
	ul {
		list-style: none;
	}
	svg {
		margin: 0 5px;
		stroke-width: 1;
		width: 30px;
		height: 30px;
	}
	ul li {
		padding: 10px 0;
		width: 284px;
		height: 50px;
		border-radius: 15px;
		display: flex;
		justify-content: flex-start;
		align-items: center;
		margin: 20px 0;
		font-size: 17px;
		cursor: pointer;
	}
	ul li:hover {
		background-color: var(--color-Onahau);
	}
	.perfil,
	.sesion {
		background-color: var(--color-Matisse);
		color: #fff;
		border: none;
		border-radius: 15px;
		padding: 10px 20px;
		cursor: pointer;
		display: flex;
		display: flex;
		justify-content: flex-start;
		align-items: center;
		font-size: 17px;
		margin: 20px 0;
		width: 284px;
		height: 50px;
	}
	.perfil:hover,
	.sesion:hover {
		background-color: var(--color-Midnight-Blue);
		color: var(--color-Dew);
	}
	.perfil {
		margin-top: 210px;
	}
	.sesion {
		margin-bottom: 20px;
	}
</style>
