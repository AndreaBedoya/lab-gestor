---
import Logo from "@assets/logo/logo-light.svg"
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="shortcut icon" href={Logo.src} type="image/x-icon">

		<!-- Importacion de la fuente -->
		<link
			href="https://api.fontshare.com/v2/css?f[]=satoshi@1&display=swap"
			rel="stylesheet"
		/>
		<!-- Importacion de la libreria de bootstrap -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<slot />

		<!-- Importacion de la libreria de bootstrap -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"></script>
	</body>
</html>

<style is:global>
	/* --------------------------------- */
	/* Variables globales de estilos */
	/* --------------------------------- */
	:root {
		/* Colores del proyecto*/
		--color-secundario: #525c66;
		--color-primario-oscuro: #003366;
		--color-primario: #1f5c99;
		--color-primario-claro: #c2e0ff;
		--color-terciario: #ebffff;

		/* Colores Botones */
		--color-rojo: #CF171D;
		--color-verde: #22861E;
		

		/* Fuentes del proyecto */
		--main-font: "Satoshi", sans-serif;
	}

	/* --------------------------------- */
	/* Seteo del HTML */
	/* --------------------------------- */
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
		font-family: var(--main-font);
		font-size: 15px;
	}

	/* --------------------------------- */
	/* Definicion clases reutilizables */
	/* --------------------------------- */

	.boton-primario {
		padding: 7px 14px;
		border-radius: 10px;
		border: 1px solid var(--color-primario);
		background: transparent;
		color: var(--color-primario);
		font-weight: 700;
		transition: 0.25s;
		width: fit-content;
	}

	.boton-primario:hover {
		border: 1px solid transparent;
		background: var(--color-primario);
		color: white;
	}

	.boton-cancelar{
		padding: 7px 14px;
		border-radius: 10px;
		border: 1px solid var(--color-rojo);
		background: transparent;
		color: var(--color-rojo);
		font-weight: 700;
		transition: 0.25s;
		width: fit-content;
		text-decoration: none;
	}

	.boton-cancelar:hover {
		border: 1px solid transparent;
		background: var(--color-rojo);
		color: white;
	}

	.boton-aceptar{
		padding: 7px 14px;
		border-radius: 10px;
		border: 1px solid var(--color-verde);
		background: transparent;
		color: var(--color-verde);
		font-weight: 700;
		transition: 0.25s;
		width: fit-content;
		text-decoration: none;
	}

	.boton-aceptar:hover {
		border: 1px solid transparent;
		background: var(--color-verde);
		color: white;
	}
	
</style>
